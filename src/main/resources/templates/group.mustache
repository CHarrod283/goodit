{{> gohome}}
{{#group}}
<h1>{{name}}</h1>
<h2>Num Users: {{NumUsers}}, Num Posts: {{NumPosts}}</h2>
<h3>Date Created: {{Date}}</h3>
{{/group}}
{{#post}}
<h3>{{Title}}</h3>
<h4>{{Username}}, {{Date}}: Likes {{Likes}}, Dislikes {{Dislikes}}</h4>
<p>{{Content}}</p>
<form method="post" action="group/like">
    <input type="hidden" name="id" id="id" value="{{ID}}">
    <button type="submit">Like</button>
</form>
<form method="post" action="group/dislike">
    <input type="hidden" name="id" id="id" value="{{ID}}">
    <button type="submit">Dislike</button>
</form>
{{/post}}